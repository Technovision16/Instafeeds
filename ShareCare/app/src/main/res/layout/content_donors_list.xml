<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back3"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.healthpatient.patientapp.DonorsList"
    tools:showIn="@layout/activity_donors_list">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="5dp"
        android:id="@+id/lab1"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:padding="8dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/donor1"
                />
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/donorname1"
                android:text="Bhawna Bhatt"
                android:textSize="22dp"
                android:fontFamily="sans-serif-medium"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/donor1"
                />

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/email1"
                android:text="bhawnabhatt96@gmail.com"
                android:textSize="20dp"
                android:fontFamily="sans-serif-family"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/donorname1"
                android:layout_toRightOf="@+id/imagelab1"
                />

            <TextView
                android:layout_width="wrap_content"
                android:text="99999999999"
                android:textSize="20dp"
                android:id="@+id/other1"
                android:fontFamily="sans-serif-family"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/email1"
                android:layout_toRightOf="@+id/imagelab1"
                />
            <TextView
                android:layout_width="wrap_content"
                android:text="Street "
                android:textSize="20dp"
                android:id="@+id/street1"
                android:fontFamily="sans-serif-family"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/other1"
                android:layout_toRightOf="@+id/imagelab1"
                />


            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_toRightOf="@+id/labname1"
                android:layout_marginLeft="90dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:padding="5dp"
                    android:background="@color/md_red_800"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/blood1"
                        android:layout_height="wrap_content"
                        android:textSize="25dp"
                        android:textColor="@color/md_white_1000"
                        android:text="A+"/>
                </RelativeLayout>
            </android.support.v7.widget.CardView>


        </RelativeLayout>

    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="5dp"
        android:layout_below="@+id/lab1"
        android:layout_marginTop="5dp"
        android:id="@+id/lab2"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:padding="8dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/donor2"
                />
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/donorname2"
                android:text="Avni Agarwal"
                android:textSize="22dp"
                android:fontFamily="sans-serif-medium"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/donor2"
                />

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/email2"
                android:text="avniagarwal100@gmail.com"
                android:textSize="20dp"
                android:fontFamily="sans-serif-family"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/donorname2"
                android:layout_toRightOf="@+id/imagelab1"
                />

            <TextView
                android:layout_width="wrap_content"
                android:text="9999987252"
                android:textSize="20dp"
                android:id="@+id/other2"
                android:fontFamily="sans-serif-family"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/email2"
                android:layout_toRightOf="@+id/imagelab1"
                />
            <TextView
                android:layout_width="wrap_content"
                android:text="Street "
                android:textSize="20dp"
                android:id="@+id/street2"
                android:fontFamily="sans-serif-family"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/other2"
                android:layout_toRightOf="@+id/imagelab1"
                />


            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_toRightOf="@+id/labname1"
                android:layout_marginLeft="90dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:padding="5dp"
                    android:background="@color/md_red_800"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="25dp"
                        android:id="@+id/blood2"
                        android:textColor="@color/md_white_1000"
                        android:text="A+"/>
                </RelativeLayout>
            </android.support.v7.widget.CardView>


        </RelativeLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>
